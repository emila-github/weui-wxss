/**app.wxss**/
page{
    height: 100%;
    color: #333;
    display: flex;
    flex-direction: column;
    font: normal 30rpx/1.68 -apple-system-font, 'Helvetica Neue', Helvetica, 'Microsoft YaHei', sans-serif;
}
.container {
    flex: 1;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}
.container-body{
    flex: 1;
    overflow-y: auto;
    overflow-x: hidden;
    position: relative;
}

.searchbox{
    position:absolute;
    top:0px;
    left: 0px;
    display: flex;
    flex-direction: column;
    width: 100%;
    background: green;
    text-align: center;
    color: #fff;
}


.gototop{
    position: fixed;
    bottom: 20rpx;
    right: 20rpx;
    transition: all 0.3s;
    opacity: 0;
    transform: translateY(200rpx) rotate(180deg);
}
.gototop.active{
    opacity: 0.7;
    transform: translateY(0) rotate(180deg);
}
.test-item{
    padding: 20rpx;
    border-bottom: 1rpx solid #ddd;
}
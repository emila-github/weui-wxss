/*总菜单容器*/
.menu { display: flex; height: 38px; border-left: 1px solid #d2d2d2;
    border-top: 1px solid #d2d2d2;}
/*一级菜单*/
.menu .menu-tab {
    font-size: 15px;flex: 1; height: 38px;border-right: 1px solid #d2d2d2;
    border-bottom: 1px solid #d2d2d2; text-align: center;background-color: #f4f4f4; color: #5a5a5a;line-height: 38px;
}
/*二级菜单外部容器样式*/
.menu .menu-con{ position: absolute;width: 100%;top:39px; left:0;z-index:999;}
/*二级菜单普通样式*/
.menu li{
    font-size: 14px; line-height: 34px;color: #575757;height: 34px;display: block;padding-left: 8px;
    background-color: #fff;border-bottom: 1px solid #dbdbdb;
}
/* 显示与隐藏 */
.show {
    display: block;
}
.hidden {
    display: none;
}

/*二级菜单高亮样式*/
.menu li.highlight{    background-color: #f4f4f4;
}